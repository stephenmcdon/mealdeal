require 'pathname'
require 'tmpdir'

module CedarTargetMealDealSpecs
  UI_SPECS_TARGET_NAME = "MealDealSpecs"
  CONFIGURATION = "Release"

  PROJECT_ROOT = Pathname.new(File.dirname(__FILE__)).parent.to_s
  BUILD_DIR = File.join(PROJECT_ROOT, "build")

  class << self
    def in_project_dir
      original_dir = Dir.pwd
      Dir.chdir(PROJECT_ROOT)

      yield

      ensure
      Dir.chdir(original_dir)
    end

    def deployment_target_sdk_version
      in_project_dir do
        `xcodebuild -showBuildSettings -target #{UI_SPECS_TARGET_NAME} | grep IPHONEOS_DEPLOYMENT_TARGET | awk '{print $3 }'`.strip
      end
    end

    def deployment_target_sdk_dir
      @sdk_dir ||= "#{xcode_developer_dir}/Platforms/iPhoneSimulator.platform/Developer/SDKs/iPhoneSimulator#{deployment_target_sdk_version}.sdk"
    end

    # Xcode 4.3 stores its /Developer inside /Applications/Xcode.app, Xcode 4.2 stored it in /Developer
    def xcode_developer_dir
      `xcode-select -print-path`.strip
    end

    def build_dir(effective_platform_name)
      File.join(BUILD_DIR, CONFIGURATION + effective_platform_name)
    end

    def system_or_exit(cmd, stdout = nil)
      puts "Executing #{cmd}"
      cmd += " >#{stdout}" if stdout
      system(cmd) or raise "******** Build failed ********"
    end

    def with_env_vars(env_vars)
      old_values = {}
      env_vars.each do |key,new_value|
        old_values[key] = ENV[key]
        ENV[key] = new_value
      end

      yield

      env_vars.each_key do |key|
        ENV[key] = old_values[key]
      end
    end

    def output_file(target)
      output_dir = if ENV['IS_CI_BOX']
        ENV['CC_BUILD_ARTIFACTS']
      else
        Dir.mkdir(BUILD_DIR) unless File.exists?(BUILD_DIR)
        BUILD_DIR
      end

      output_file = File.join(output_dir, "#{target}.output")
      puts "Output: #{output_file}"
      output_file
    end

    def kill_simulator
      system %Q[killall -m -KILL "gdb"]
      system %Q[killall -m -KILL "otest"]
      system %Q[killall -m -KILL "iPhone Simulator"]
    end
  end
end

desc "Clean build directory"
task :clean_MealDealSpecs do
  CedarTargetMealDealSpecs.system_or_exit "rm -rf #{CedarTargetMealDealSpecs::BUILD_DIR}/*", CedarTargetMealDealSpecs.output_file("clean")
end

desc "Build MealDealSpecs"
task :build_MealDealSpecs => :clean_MealDealSpecs do
  CedarTargetMealDealSpecs.kill_simulator
  CedarTargetMealDealSpecs.system_or_exit "pushd #{CedarTargetMealDealSpecs::PROJECT_ROOT} && xcodebuild -target #{CedarTargetMealDealSpecs::UI_SPECS_TARGET_NAME} -configuration #{CedarTargetMealDealSpecs::CONFIGURATION} -sdk iphonesimulator build ARCHS=i386 && popd", CedarTargetMealDealSpecs.output_file("MealDealSpecs")
end

desc "Run MealDealSpecs"
task :MealDealSpecs => :build_MealDealSpecs do
  env_vars = {
    "DYLD_ROOT_PATH" => CedarTargetMealDealSpecs.deployment_target_sdk_dir,
    "IPHONE_SIMULATOR_ROOT" => CedarTargetMealDealSpecs.deployment_target_sdk_dir,
    "CFFIXED_USER_HOME" => Dir.tmpdir,
    "CEDAR_HEADLESS_SPECS" => "1",
    "CEDAR_REPORTER_CLASS" => "CDRColorizedReporter"
  }

  app_path = File.join(CedarTargetMealDealSpecs.build_dir("-iphonesimulator"), "#{CedarTargetMealDealSpecs::UI_SPECS_TARGET_NAME}.app")

  CedarTargetMealDealSpecs.with_env_vars(env_vars) do
    CedarTargetMealDealSpecs.system_or_exit "#{File.join(CedarTargetMealDealSpecs.build_dir("-iphonesimulator"), "#{CedarTargetMealDealSpecs::UI_SPECS_TARGET_NAME}.app", CedarTargetMealDealSpecs::UI_SPECS_TARGET_NAME)} -RegisterForSystemEvents";
  end
end
